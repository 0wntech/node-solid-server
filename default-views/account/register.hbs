<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register</title>
  <link rel="stylesheet" href="/common/css/bootstrap.min.css">
  <link rel="stylesheet" href="/common/css/solid.css">
  <link rel="stylesheet" href="/common/css/main.css">
  <link rel="stylesheet" href="/common/css/auth.css">
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700&display=swap" rel="stylesheet">
</head>

<body>
  <div class="pageWrapper">
    <div class="authContainer">
      <div class="header">
        <h1>Register</h1>
        <div class="logo">
          <img src="/favicon.ico" />
          <p class="provider"></p>
        </div>
      </div>
      {{#if registerDisabled}}
      {{> account/register-disabled}}
      {{else}}
      {{> account/register-form}}
      {{/if}}
    </div>
</body>
<script>
  const locationUrl = location.href.split('/');
  locationUrl.shift();
  locationUrl.shift();
  const providerFields = document.getElementsByClassName('provider')
  for (var i = 0; i < providerFields.length; i++) {
    providerFields[i].innerHTML = locationUrl[0].split('.')[0].toLowerCase();
  }
</script>

</html>