<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register</title>
  <link rel="stylesheet" href="/common/css/bootstrap.min.css">
  <link rel="stylesheet" href="/common/css/solid.css">
  <link rel="stylesheet" href="/common/css/auth.css">
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700&display=swap" rel="stylesheet">
</head>

<body>
  <div class="container-fluid">
    <div class="row visible-xs-inline visible-lg-block visible-md-block visible-sm-block">
      <div class="col-sm-3 col-md-3 col-lg-4"></div>
      <div class="col-sm-6 col-md-6 col-lg-4 authContainer">
        <div class="page-header header">
          <h1>Register</h1>
          <div class="logo">
            <img src="/favicon.ico" />
            <p class="provider"></p>
          </div>
        </div>
        {{#if registerDisabled}}
        {{> account/register-disabled}}
        {{else}}
        {{> account/register-form}}
        {{/if}}
      </div>
      <div class="col-sm-3 col-md-3 col-lg-4"></div>
    </div>
</body>
<script>
  const locationUrl = location.href.split('/');
  locationUrl.shift();
  locationUrl.shift();
  const providerFields = document.getElementsByClassName('provider')
  for(var i = 0; i < providerFields.length; i++){
    providerFields[i].innerHTML = locationUrl[0].split('.')[0].toUpperCase();
  }
</script>

</html>